<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="Semantic Search Widget" author="gfbiodev"
			author_email="dev@gfbio.org" >
		<Require feature="pubsub-2">
			<Param name="topics">
				<![CDATA[
        <Topic title="Semantic Search Widget" name="gfbio.search.selectedData" publish="true" subscribe="true"/>
          ]]>
			</Param>
		</Require>
		<Require feature="dynamic-height" />
	</ModulePrefs>
	<Content type="html">
		<![CDATA[
		<html style="min-height: 350px;">
			<head  lang="en">
				<meta charset="UTF-8">
				<title>GFBio Search widget</title>
				<script src="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/js/jquery-1.10.2.js"	type="text/javascript"></script>
				<script src="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/js/jquery-1.10.2-ui.js"	type="text/javascript"></script>
				<script src="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/js/jquery.dataTables.js"	type="text/javascript"></script>
				<script src="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/js/spectrum.js"	type="text/javascript"></script>
				<script src="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/js/jquery.barrating.min.js" type="text/javascript"></script>
				<script src="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/js/search_semantic.js?gerr=123"	type="text/javascript"></script>
				<link rel="stylesheet"	href="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/css/jquery-ui.css" />
				<link rel="stylesheet"	href="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/css/dataTables.jqueryui.css" />
				<link rel="stylesheet"	href="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/css/jquery.dataTables.css" />
				<link rel="stylesheet"	href="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/css/spectrum.css" />
				<link rel="stylesheet"	href="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/css/bars-horizontal.css" />
				<link rel="stylesheet"	href="http://gfbio-dev1.inf-bb.uni-jena.de/gfbioGA4/search/css/search.css" />
			</head>
			<body style="min-height:350px;">
				<div id="search_gadget">
					<label style="display:block;">Search:&nbsp; 
						<span style="display:inline;">
						<input id="gfbioSearchInput"
						name="gfbioSearchInput" 
						type="search" 
						class="acInput" value=""
						placeholder="Parameters, authors, data center, taxa, ..."
						autocomplete="off"/> 
						<input id="QueryButton" name="QueryButton"
						type="button" value="" class="acButton" style="display:none"
						onclick="javascript:newQuery(true);" />
						</span>
						<span></span>
						<input id="SemanticQueryButton" name="SemanticQueryButton"
						type="button" value="" 
						title="This will include semantic terms, including more relevant results, but could take longer processing time."
						onclick="javascript:semanticQuery(true);" />
						</span>
					</label> <div style="height:10px"></div>
					<div style="height:10px"></div>
					<div id="search_result_table"></div>

				</div>
				<input id="visualBasket" type="hidden" value=""/>
				<input id="queryJSON" type="hidden" value=""/>
				<input id="basketID" type="hidden" value="0"/>
				<input id="semanticTerms" type="hidden" value=""/>
			</body>
			<script type="text/javascript">
				$=jQuery;
				gadgets.HubSettings.onConnect = function(hub, suc, err) {
					gadgets.Hub.subscribe("gfbio.search.facetfilter", applyFacetFilter);
					gadgets.Hub.subscribe("gfbio.search.basketData", loadBasket);
					var q = getQueryVariable('q_');
					if (q != '') {
						var searchbox = document.getElementById("gfbioSearchInput");
						searchbox.value = q.replace("+"," ");
						newQuery(true);
					}
				};
				$(document).ready(function() {
					listenToEnterPress();
					setAutoComplete();
					//TODO: Check if there's any input cookie stored
					if(getCookie("gfbioSearchInput")==null){
					// no keyword, no filter
					showLatestTenDataset("","");
					} else{
						var searchbox = document.getElementById("gfbioSearchInput");
						searchbox.value = getCookie("gfbioSearchInput");
						newQuery(false);
					}
				});
				
				$( document ).ajaxComplete(function( event, xhr, settings ) {
					adjustGadgetHeight();
					document.getElementById('gfbioSearchInput').focus();
				});
				
			</script>
		</html>
	]]>

	</Content>
</Module>