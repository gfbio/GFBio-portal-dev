<!DOCTYPE html>

#parse ($init)

<html class="$root_css_class" dir="#language ("lang.dir")" lang="$w3c_language_id">

<head>
	<title>$the_title - $company_name</title>

	<meta content="initial-scale=1.0, width=device-width" name="viewport" />

	$theme.include($top_head_include)
</head>
<link href="https://fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic" rel="stylesheet" type="text/css">

#set ($dockbar = $theme.getSetting("dockbar-vertical"))

#if ($dockbar == true)
	#set ($css_class = "${css_class} dockbar-vertical")
#end

<body class="$css_class">

<a href="#main-content" id="skip-to-content">#language ("skip-to-content")</a>

$theme.include($body_top_include)
	
	
<div class="container-fluid">

	<header id="navigation" class="yamm navbar-inverse navbar-fixed-top animated-header">

	
	<div class="container-fluid">
		<div id="logo-gfbio">
				<a id="logo-gfbio-link" href="/">
				<img id="logo-gfbio" src="$images_folder/gfbiologo-transparent.png"></a>
		</div>
		
		<div id="nav">	
			#if ($has_navigation || $is_signed_in)
					#parse ("$full_templates_path/navigation.vm")
			#end	
		</div>
		
	
		<nav class="collapse navbar-collapse navbar-right" id="search" role="navigation">
            <!--<ul id="nav-right" class="nav navbar-nav">
                <li><a href="sign_in.html">Sign In</a></li>
            </ul>-->
            <form action="$portal_url/search-page" method="GET" name="portalForm" class="navbar-form navbar-left" role="search">
                <div id="navbar-search-wrapper" class="form-group">
                    <input id="navbar-search-input" type="text" class="form-control" placeholder="Search ...">
                </div>
                <button id="navbar-search-submit" type="submit" class="btn btn-default"><i class="fa fa-search"
                                                                                           aria-hidden="true"></i>
                </button>
            </form>
          </nav> 
	 </div>	
	 
	 	
#if ($is_signed_in)
	#dockbar()
#end
	
	
	</header>
	
<main class="site-content" role="main">
	<!--<div id="content">-->
		
		#if ($selectable)
			$theme.include($content_include)
		#else
			$portletDisplay.recycle()

			$portletDisplay.setTitle($the_title)

			$theme.wrapPortlet("portlet.vm", $content_include)
		#end
	</div>

	<!--</div>-->
</main>

$theme.include($body_bottom_include)

$theme.include($bottom_include)

#js ("$javascript_folder/jquery-1.11.1.min.js")
#js ("$javascript_folder/jquery.ba-cond.min.js")
#js ("$javascript_folder/jquery.fancybox.pack.js")
#js ("$javascript_folder/jquery.parallax-1.1.3.js")
#js ("$javascript_folder/jquery.singlePageNav.min.js")
#js ("$javascript_folder/jquery.slitslider.js")
#js ("$javascript_folder/jquery.modernizr-2.6.2.min.js")
#js ("$javascript_folder/owl.carousel.min.js")
#js ("$javascript_folder/wow.min.js")


</body>

</html>